{
  "name": "two-and-half-d",
  "version": "1.0.0",
  "description": "A functional reactive game (framework ?) in the browser",
  "main": "src/index.ts",
  "author": "age2pierre",
  "license": "MIT",
  "private": false,
  "scripts": {
    "develop": "concurrently -r \"npm:type-check:watch\" \"npm:start\"",
    "start": "parcel ./src/index.html",
    "build": "npm run type-check && parcel build ./src/index.html --public-url '/'",
    "prettify": "prettier --write './src/**/*.{ts,tsx,html}'",
    "test": "jest",
    "test:watch": "jest --watch",
    "type-check": "tsc --noEmit",
    "type-check:watch": "tsc --noEmit --watch"
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm run prettify && npm run test"
    }
  },
  "dependencies": {
    "@types/matter-js": "^0.10.2",
    "babylonjs": "^4.0.0-alpha.11",
    "babylonjs-materials": "^4.0.0-alpha.11",
    "immutable": "^4.0.0-rc.12",
    "immutable-diff": "^0.1.1",
    "matter-js": "^0.14.2",
    "rxjs": "^6.3.3",
    "xstream": "^11.7.0"
  },
  "devDependencies": {
    "@types/jest": "^23.3.10",
    "husky": "^1.2.0",
    "jest": "^23.6.0",
    "parcel": "^1.10.3",
    "prettier": "^1.15.3",
    "ts-jest": "^23.10.5",
    "tslint": "^5.11.0",
    "tslint-config-prettier": "^1.17.0",
    "typescript": "^3.2.2"
  }
}
